<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.7"
    android:background="#aeaeae"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="16dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dfdfdf"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/editText_inputTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageButton_appendText"
            android:layout_gravity="center_horizontal|top"
            android:background="@android:color/background_light"
            android:elegantTextHeight="true"
            android:hint="@string/enter_text_to_display_in_table"
            android:inputType="textMultiLine"
            android:padding="16dp" />

        <ImageButton
            android:id="@+id/imageButton_appendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText_inputTable"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/editText_inputTable"
            android:src="@drawable/ic_note_add_black_48dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/editText_inputTable"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageButton_appendText"
            android:layout_toStartOf="@+id/imageButton_appendText">

            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/seekBar_columnsNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/editText_inputTable"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_below="@+id/imageButton_appendText"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/imageButton_appendText"
                android:layout_toStartOf="@+id/imageButton_appendText"
                app:dsb_indicatorColor="@color/colorAccent"
                app:dsb_indicatorFormatter="Columns: %d"
                app:dsb_max="30"
                app:dsb_min="1"
                app:dsb_progressColor="@color/colorPrimary"
                app:dsb_scrubberHeight="6dp"
                app:dsb_thumbSize="28dp"
                app:dsb_trackColor="@color/colorAccent"
                app:dsb_trackHeight="4dp"
                app:dsb_value="5"/>
        </FrameLayout>

    </RelativeLayout>
</RelativeLayout>