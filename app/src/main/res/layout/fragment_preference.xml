<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.7"
                android:background="#aeaeae"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="16dp"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#dfdfdf"
                    android:orientation="vertical"
                    android:padding="8dp">

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageButton"
            android:layout_gravity="center_horizontal|top"
            android:background="@android:color/background_light"
            android:elegantTextHeight="true"
            android:hint="Enter text to display in table"
            android:inputType="textMultiLine"
            android:padding="16dp"/>

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton"
            app:dsb_indicatorColor="@color/colorAccent"
            app:dsb_max="30"
            app:dsb_min="1"
            app:dsb_progressColor="@color/colorPrimary"
            app:dsb_trackColor="@color/colorAccent"
            app:dsb_trackHeight="2dp"
            app:dsb_value="1"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editText2"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/editText2"
            android:src="@drawable/ic_note_add_black_48dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|center_vertical"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:text="Columns number"/>

    </RelativeLayout>
</RelativeLayout>