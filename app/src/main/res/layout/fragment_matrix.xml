<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                tools:context="io.github.marcinn.matrixoptimalpath.view.MatrixFragment">

    <TextView
        android:id="@+id/textView_statistics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/stat_border"
        android:gravity="center"
        android:minHeight="40dp"
        android:text="@string/you_can_add_new_words_in_settings"
        android:textSize="14sp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_matrix"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView_statistics"
        android:layout_marginTop="8dp"
        android:drawingCacheQuality="high"
        android:scrollbars="vertical"/>

</RelativeLayout>
